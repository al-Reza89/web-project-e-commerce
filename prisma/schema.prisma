generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  hashedPassword  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  favoriteIds     String[] @db.ObjectId

// user have many accounts account er array rakhbo
  accounts Account[]
  // listings Listing[]
  // reservations Reservation[]
}






// socal login er jonno ei rokom e houa lagbe
model Account {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId             String   @db.ObjectId
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.String
  access_token       String?  @db.String
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.String
  session_state      String?

// relation create kore userId field diye jar reference e User model er id rakhe

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

// duitar e unique combination houa lagbe 
  @@unique([provider, providerAccountId])
}





